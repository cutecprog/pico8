function add_commit_message()
  -- check if message entered
  if stat(6) ~= "~~~" 
      and stat(6) ~= "" then
    printh(stat(6), "msg", true)
    ?"commit message set"
    -- sleep 1 second
    for i=1, 30 do flip() end
    -- reset breadcrumb
    run("~~~")
  end
end
